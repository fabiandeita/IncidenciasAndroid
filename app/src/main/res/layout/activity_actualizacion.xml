<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#FFF">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/scrollView2"
            android:layout_above="@+id/horizontalScrollView3">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Filtro de Busqueda:"
                    android:id="@+id/textView51"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Entidad:"
                    android:id="@+id/textView"
                    android:textSize="20dp" />

                <Spinner
                    android:layout_width="260dp"
                    android:layout_height="40dp"
                    android:id="@+id/spEntidad"
                    android:background="@drawable/boton_rojo"
                    android:spinnerMode="dropdown"
                    android:prompt="@string/entidad"
                    android:layout_marginBottom="15dp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Selecciona una incidencia para agregar actividades:"
                    android:id="@+id/txtSeleccione"
                    android:textSize="20dp"
                    android:textColor="#666666"
                    android:gravity="center_horizontal" />

                <ListView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/lvIncidencias"
                    android:layout_marginBottom="30dp"
                    android:nestedScrollingEnabled="false"
                    android:clickable="false"
                    tools:listitem="@android:layout/simple_list_item_1"
                    android:layout_marginTop="35dp" />

                <Space
                    android:layout_width="fill_parent"
                    android:layout_height="100dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Carretera:"
                    android:id="@+id/textView3"
                    android:textSize="20dp"
                    android:visibility="invisible" />

                <Spinner
                    android:layout_width="260dp"
                    android:layout_height="40dp"
                    android:id="@+id/spCarretera"
                    android:background="@drawable/boton_rojo"
                    android:spinnerMode="dropdown"
                    android:prompt="@string/carretera"
                    android:layout_marginBottom="15dp"
                    android:visibility="invisible" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tramo:"
                    android:id="@+id/textView17"
                    android:textSize="20dp"
                    android:visibility="invisible" />

                <Spinner
                    android:layout_width="260dp"
                    android:layout_height="40dp"
                    android:id="@+id/spSubtramo"
                    android:background="@drawable/boton_rojo"
                    android:spinnerMode="dropdown"
                    android:prompt="@string/subtramo"
                    android:layout_marginBottom="15dp"
                    android:visibility="invisible" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Subtramo:"
                    android:id="@+id/textView21"
                    android:textSize="20dp"
                    android:visibility="invisible" />

                <Spinner
                    android:layout_width="260dp"
                    android:layout_height="40dp"
                    android:id="@+id/spTramo"
                    android:background="@drawable/boton_rojo"
                    android:spinnerMode="dropdown"
                    android:prompt="@string/tramo"
                    android:layout_marginBottom="15dp"
                    android:visibility="invisible" />

            </LinearLayout>
        </ScrollView>

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:id="@+id/horizontalScrollView3"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:fillViewport="true">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="false"
                android:layout_alignParentStart="true"
                android:id="@+id/linearLayout6"
                android:background="#F8F8F8"
                android:gravity="center_horizontal">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/btnInicio"
                    android:src="@drawable/acceso"
                    android:background="#00ffffff"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/btnAlta"
                    android:src="@drawable/alta"
                    android:background="#00ffffff"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/btnActualizacion"
                    android:src="@drawable/actualizacion2"
                    android:background="#00ffffff"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/btnMapa"
                    android:src="@drawable/mapa"
                    android:background="#00ffffff"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/btnReportes"
                    android:src="@drawable/reporte"
                    android:background="#00ffffff"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/btnConfiguracion"
                    android:src="@drawable/configuracion"
                    android:background="#00ffffff"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY" />
            </LinearLayout>
        </HorizontalScrollView>

    </RelativeLayout>

</LinearLayout>