<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#fff">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/scrollView"
            android:layout_above="@+id/horizontalScrollView2">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:baselineAligned="true"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Datos de Ubicación"
                    android:id="@+id/textView43"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Entidad:"
                    android:id="@+id/textView8"
                    android:textSize="20dp" />

                <Spinner
                    android:layout_width="260dp"
                    android:layout_height="40dp"
                    android:id="@+id/spEntidad"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"

                    android:textColor="#FFFFFF"
                    android:background="@drawable/boton_rojo"
                    android:spinnerMode="dropdown"
                    android:prompt="@string/entidad"
                    android:layout_marginBottom="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Carretera:"
                    android:id="@+id/textView9"
                    android:textSize="20dp"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/spDano"
                    android:layout_toEndOf="@+id/spDano" />

                <Spinner
                    android:layout_width="260dp"
                    android:layout_height="40dp"
                    android:id="@+id/spCarretera"
                    android:layout_below="@+id/txtKmFinal"
                    android:layout_alignLeft="@+id/txtKmFinal"
                    android:layout_alignStart="@+id/txtKmFinal"
                    android:prompt="@string/carretera"
                    android:background="@drawable/boton_rojo"
                    android:spinnerMode="dropdown"
                    android:layout_marginBottom="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tramo:"
                    android:id="@+id/textView6"
                    android:textSize="20dp"
                    android:layout_below="@+id/linearLayout3"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <Spinner
                    android:layout_width="260dp"
                    android:layout_height="40dp"
                    android:id="@+id/spTramo"
                    android:layout_below="@+id/textView7"
                    android:layout_toRightOf="@+id/spTramo"
                    android:layout_toEndOf="@+id/spTramo"
                    android:prompt="@string/tramo"
                    android:background="@drawable/boton_rojo"
                    android:spinnerMode="dropdown"
                    android:layout_marginBottom="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Subtramo:"
                    android:id="@+id/textView7"
                    android:textSize="20dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <Spinner
                    android:layout_width="260dp"
                    android:layout_height="40dp"
                    android:id="@+id/spSubtramo"
                    android:layout_below="@+id/textView6"
                    android:layout_toRightOf="@+id/spCarretera"
                    android:layout_toEndOf="@+id/spCarretera"
                    android:prompt="@string/subtramo"
                    android:background="@drawable/boton_rojo"
                    android:spinnerMode="dropdown"
                    android:layout_marginBottom="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Geolocalización"
                    android:id="@+id/textView44"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="15dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="15dp">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="fill_parent"
                        android:text="Km Inicial:"
                        android:id="@+id/textView4"
                        android:textSize="20dp" />

                    <EditText
                        android:layout_width="150dp"
                        android:layout_height="fill_parent"
                        android:id="@+id/etKmInicial"
                        android:background="#fff1f1f1"
                        android:inputType="numberSigned" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="15dp">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="fill_parent"
                        android:text="Km Final:"
                        android:id="@+id/txtKmFinal"
                        android:textSize="20dp" />

                    <EditText
                        android:layout_width="150dp"
                        android:layout_height="fill_parent"
                        android:id="@+id/etKmFinal"
                        android:background="#fff1f1f1"
                        android:inputType="numberSigned" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="15dp">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="fill_parent"
                        android:text="Latitud:"
                        android:id="@+id/textView5"
                        android:textSize="20dp"
                        android:inputType="numberDecimal" />

                    <EditText
                        android:layout_width="150dp"
                        android:layout_height="fill_parent"
                        android:ems="10"
                        android:id="@+id/txtLatitud"
                        android:textSize="14dp"
                        android:background="#fff1f1f1"
                        android:inputType="numberDecimal"
                        android:singleLine="false"
                        android:enabled="false"
                        android:editable="false" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="15dp">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="fill_parent"
                        android:text="Longitud:"
                        android:id="@+id/textView10"
                        android:textSize="20dp"
                        android:inputType="numberDecimal" />

                    <EditText
                        android:layout_width="150dp"
                        android:layout_height="fill_parent"
                        android:ems="10"
                        android:id="@+id/txtLongitud"
                        android:textSize="14dp"
                        android:background="#fff1f1f1"
                        android:inputType="numberDecimal"
                        android:enabled="false"
                        android:editable="false"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="15dp">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="fill_parent"
                        android:text="Altitud:"
                        android:id="@+id/textView11"
                        android:textSize="20dp"
                        android:inputType="numberDecimal" />

                    <EditText
                        android:layout_width="150dp"
                        android:layout_height="fill_parent"
                        android:ems="10"
                        android:id="@+id/txtAltitud"
                        android:textSize="14dp"
                        android:background="#fff1f1f1"
                        android:inputType="numberDecimal"
                        android:enabled="false"
                        android:editable="false"/>
                </LinearLayout>

                <Button
                    android:layout_width="150dp"
                    android:layout_height="35dp"
                    android:text="Capturar GPS"
                    android:id="@+id/btnCapturarGPS"
                    android:background="@drawable/boton_verde"
                    android:textColor="#ffffffff"
                    android:layout_marginBottom="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tipo de daños"
                    android:id="@+id/textView45"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Daños causados:"
                    android:id="@+id/textView2"
                    android:textSize="20dp" />

                <Spinner
                    android:layout_width="260dp"
                    android:layout_height="40dp"
                    android:id="@+id/spDano"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/boton_rojo"
                    android:spinnerMode="dropdown"
                    android:prompt="@string/danosCausados"
                    android:layout_marginBottom="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Causa de la incidencia:"
                    android:id="@+id/textView12"
                    android:textSize="20dp"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/spDano"
                    android:layout_toEndOf="@+id/spDano" />

                <Spinner
                    android:layout_width="260dp"
                    android:layout_height="40dp"
                    android:id="@+id/spCausa"
                    android:layout_below="@+id/txtKmFinal"
                    android:layout_alignLeft="@+id/txtKmFinal"
                    android:layout_alignStart="@+id/txtKmFinal"
                    android:prompt="@string/causaIncidencia"
                    android:background="@drawable/boton_rojo"
                    android:spinnerMode="dropdown"
                    android:layout_marginBottom="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tipo de incidencia:"
                    android:id="@+id/textView13"
                    android:textSize="20dp" />

                <Spinner
                    android:layout_width="260dp"
                    android:layout_height="40dp"
                    android:id="@+id/spTipoIncidencia"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/boton_rojo"
                    android:spinnerMode="dropdown"
                    android:prompt="@string/tipoIncidencia"
                    android:layout_marginBottom="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Categoría:"
                    android:id="@+id/txtCategoria"
                    android:textSize="20dp" />

                <Spinner
                    android:layout_width="260dp"
                    android:layout_height="40dp"
                    android:id="@+id/spCategoria"
                    android:background="@drawable/boton_rojo"
                    android:layout_marginBottom="15dp"
                    android:spinnerMode="dropdown" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Descripción"
                    android:id="@+id/textView46"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="15dp" />

                <EditText
                    android:layout_width="270dp"
                    android:layout_height="35dp"
                    android:id="@+id/etDescripcion"
                    android:textSize="17dp"
                    android:background="#fff1f1f1"
                    android:hint="Escriba una breve descripción..."
                    android:singleLine="true"
                    android:layout_marginBottom="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transitabilidad"
                    android:id="@+id/textView14"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="15dp" />

                <Spinner
                    android:layout_width="260dp"
                    android:layout_height="40dp"
                    android:prompt="@string/transitabilidad"
                    android:id="@+id/spTransitabilidad"
                    android:background="@drawable/boton_rojo"
                    android:layout_marginBottom="15dp"
                    android:spinnerMode="dropdown" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tipo de vehículos que pueden transitar:"
                    android:id="@+id/textView16"
                    android:textSize="20dp"
                    android:layout_marginBottom="15dp" />

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Autos"
                    android:id="@+id/switchAutos"
                    android:checked="false"
                    android:textSize="20dp"
                    android:layout_marginBottom="15dp" />

                <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Camiones"
                        android:id="@+id/switchCamiones"
                    android:checked="false"
                    android:textSize="20dp"
                    android:layout_marginBottom="15dp" />

                <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Todo tipo"
                        android:id="@+id/switchTodoTipo"
                        android:checked="false"
                    android:textSize="20dp"
                    android:layout_marginBottom="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fechas de apertura"
                    android:id="@+id/textView15"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Provisional"
                    android:id="@+id/textView18"
                    android:layout_span="3"
                    android:textSize="20dp"
                    android:layout_marginBottom="15dp" />

                <DatePicker
                    android:layout_width="fill_parent"
                    android:layout_height="150dp"
                    android:id="@+id/dateprov"
                    android:datePickerMode="spinner"
                    android:calendarViewShown="false"
                    android:paddingBottom="15dp"
                    android:layout_marginBottom="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Definitiva"
                    android:id="@+id/textView19"
                    android:layout_span="3"
                    android:textSize="20dp"
                    android:layout_marginBottom="15dp" />

                <DatePicker
                    android:layout_width="fill_parent"
                    android:layout_height="150dp"
                    android:id="@+id/datedef"
                    android:datePickerMode="spinner"
                    android:calendarViewShown="false"
                    android:paddingBottom="15dp"
                    android:layout_marginBottom="15dp">

                </DatePicker>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ruta alternativa:"
                    android:id="@+id/textView20"
                    android:textSize="20dp"
                    android:layout_marginBottom="15dp" />

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/switchRutaAlternativa"
                    android:checked="false"
                    android:layout_marginBottom="15dp" />

                <Button
                    android:layout_width="200dp"
                    android:layout_height="35dp"
                    android:text="Ver o adjuntar cróquis"
                    android:id="@+id/btnCroquis"
                    android:background="@drawable/boton_verde"
                    android:textColor="#FFFFFF"
                    android:visibility="invisible"
                    android:layout_marginBottom="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Acciones Realizadas"
                    android:id="@+id/textView47"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="15dp" />

                <EditText
                    android:layout_width="270dp"
                    android:layout_height="35dp"
                    android:id="@+id/etAcciones"
                    android:textAlignment="center"
                    android:background="#fff1f1f1"
                    android:hint="Agregue una acción"
                    android:layout_marginBottom="15dp"
                    android:singleLine="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fotografías de incidencia"
                    android:id="@+id/textView48"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="15dp" />

                <Button
                    android:layout_width="200dp"
                    android:layout_height="35dp"
                    android:text="Ver o adjuntar fotos"
                    android:id="@+id/btnVerAdjuntarFotos"
                    android:background="@drawable/boton_verde"
                    android:textColor="#ffffffff"
                    android:layout_marginBottom="15dp" />

                <Button
                    android:layout_width="260dp"
                    android:layout_height="40dp"
                    android:text="Guardar incidencia"
                    android:id="@+id/btnCGuardarIncidencia"
                    android:background="@drawable/boton_rojo"
                    android:textColor="#ffffffff"
                    android:layout_marginBottom="15dp" />


            </LinearLayout>
        </ScrollView>

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:id="@+id/horizontalScrollView2"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:fillViewport="true">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/linearLayout3"
                android:background="#F8F8F8"
                android:gravity="center_horizontal">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/btnInicio"
                    android:src="@drawable/acceso"
                    android:background="#00ffffff"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/btnAlta"
                    android:src="@drawable/alta2"
                    android:background="#00ffffff"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/btnActualizacion"
                    android:src="@drawable/actualizacion"
                    android:background="#01ffffff"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/btnMapa"
                    android:src="@drawable/mapa"
                    android:background="#00ffffff"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/btnReportes"
                    android:src="@drawable/reporte"
                    android:background="#00ffffff"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/btnConfiguracion"
                    android:src="@drawable/configuracion"
                    android:background="#00ffffff"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY" />
            </LinearLayout>
        </HorizontalScrollView>

    </RelativeLayout>

</LinearLayout>