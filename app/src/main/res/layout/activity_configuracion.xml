<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#fff" >

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/scrollView5"
            android:layout_above="@+id/horizontalScrollView7">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:weightSum="1"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Usuario:"
                    android:id="@+id/textView34"
                    android:textSize="20dp"
                    android:enabled="true"
                    android:visibility="visible"
                    android:layout_marginTop="15dp" />

                <EditText
                    android:layout_width="270dp"
                    android:layout_height="35dp"
                    android:id="@+id/etUsuario"
                    android:enabled="false"
                    android:editable="false"
                    android:textSize="20dp"
                    android:visibility="visible"
                    android:layout_marginTop="15dp"
                    android:background="#fff1f1f1"
                    android:singleLine="true"
                    android:textAlignment="center"
                    android:inputType="none" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Servicios WEB:"
                    android:id="@+id/textView33"
                    android:textSize="20dp"
                    android:visibility="invisible"
                    android:enabled="true" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/etServicios"
                    android:visibility="invisible"
                    android:enabled="true"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contraseña:"
                    android:id="@+id/textView35"
                    android:textSize="20dp"
                    android:enabled="true"
                    android:visibility="visible" />

                <EditText
                    android:layout_width="270dp"
                    android:layout_height="35dp"
                    android:id="@+id/etContrasenia"
                    android:enabled="false"
                    android:editable="false"
                    android:textSize="20dp"
                    android:visibility="visible"
                    android:layout_marginTop="15dp"
                    android:background="#fff1f1f1"
                    android:singleLine="true"
                    android:textAlignment="center"
                    android:inputType="none" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reportes:"
                    android:id="@+id/textView36"
                    android:textSize="20dp"
                    android:visibility="invisible"
                    android:enabled="true" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/etReportes"
                    android:visibility="invisible"
                    android:enabled="true"
                    android:textSize="20dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sincronizar catálogos"
                    android:id="@+id/btnSincronizar"
                    android:background="@drawable/boton_verde"
                    android:textColor="#FFF"
                    android:enabled="true"
                    android:visibility="visible"
                    android:layout_marginBottom="15dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sincronizar Incidencias"
                    android:id="@+id/btnSincronizarIncidencias"
                    android:background="@drawable/boton_verde"
                    android:textColor="#FFF"
                    android:enabled="true"
                    android:visibility="visible"
                    android:layout_marginBottom="15dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Almacenar configuración"
                    android:id="@+id/btnAlmacenar"
                    android:background="@mipmap/boton_verde"
                    android:textColor="#FFF"
                    android:visibility="invisible"
                    android:enabled="true"
                    android:textSize="20dp"
                    android:layout_marginBottom="15dp" />

            </LinearLayout>
        </ScrollView>

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:id="@+id/horizontalScrollView7"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:fillViewport="true">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/linearLayout4"
                android:background="#F8F8F8"
                android:gravity="center_horizontal">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/btnInicio"
                    android:src="@drawable/acceso"
                    android:background="#00ffffff"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/btnAlta"
                    android:src="@drawable/alta"
                    android:background="#00ffffff"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/btnActualizacion"
                    android:src="@drawable/actualizacion"
                    android:background="#00ffffff"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/btnMapa"
                    android:src="@drawable/mapa"
                    android:background="#00ffffff"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/btnReportes"
                    android:src="@drawable/reporte"
                    android:background="#00ffffff"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/btnConfiguracion"
                    android:src="@drawable/configuracion2"
                    android:background="#00ffffff"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY" />
            </LinearLayout>
        </HorizontalScrollView>

    </RelativeLayout>

</LinearLayout>