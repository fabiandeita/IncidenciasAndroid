<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Inicio"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView7" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="15dp"
                    android:src="@drawable/logosct_hoz" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Usuario:"
                    android:id="@+id/lblUsuario"
                    android:textColor="#ff747474"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="15dp" />

                <EditText
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtUsuario"
                    android:layout_gravity="center"
                    android:singleLine="true"
                    android:layout_marginBottom="15dp"
                    android:drawableLeft="@drawable/user"
                    android:drawablePadding="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="ContraseÃ±a:"
                    android:id="@+id/lblPassword"
                    android:textColor="#ff747474"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="15dp" />

                <EditText
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:id="@+id/txtPassword"
                    android:layout_gravity="center"
                    android:singleLine="true"
                    android:layout_marginBottom="15dp"
                    android:drawableLeft="@drawable/password"
                    android:drawablePadding="15dp"/>

                <Button
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:text="acceder"
                    android:id="@+id/btnacceder"
                    android:layout_gravity="center"
                    android:layout_marginBottom="15dp"
                    android:background="#276759"
                    android:textColor="#FFFFFF" />

                <Button
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:text="registro"
                    android:id="@+id/btnregistro"
                    android:layout_gravity="center"
                    android:layout_marginBottom="15dp"
                    android:textColor="#FFFFFF"
                    android:background="#AF2328" />

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</LinearLayout>
